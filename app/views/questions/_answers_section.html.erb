<div class="col-md-8">
  <p class='mt-3 display-6'><%= @question.text %></p>

  <% if @answers.empty? %>
    <p class='mt-2 display-7'>Ответов на данный вопрос еще нет!</p>
  <% else %>
    <%= render @answers %>
  <% end %>

  <% if policy(Answer).create? %>
   <%= link_to t('buttons.create_answer'),
                  new_question_answer_path(@question),
                  class: 'btn btn-primary mt-4' %>
  <% end %>

  <br>

  <% if policy(@question).destroy? %>
   <%= link_to t('buttons.delete_question'),
                  question_path(@question),
                  method: :delete,
                  class: 'btn btn-primary mt-4',
                  turbo: false,
                  data: { confirm: 'Удалить вопрос?' } %>
  <% end %>
</div>
