<div class="row mt-4">
  <div class="col-md-8">
    <p class='mt-3 display-6'><%= @question.text %>
    <% if @answers.any? %>
      <%= render @answers %>
    <% else %>
      <p class='mt-2 display-7'>Ответов на данный вопрос еще нет!</p>
    <% end %>
  </div>

  <div class="col-md-4">
    <p class='mt-3 display-6'>Примеры ответов:</p>
      <% if @video_links.any? %>
        <ul class="mb-3 list-unstyled">
          <% @video_links.each do |link| %>
            <li class="youtube-list-item">
              <%= image_tag("icons8-youtube-play.svg", alt: "YouTube Icon", class: "youtube-icon") %>
              <%= link_to link[:text], "https://www.youtube.com/watch?v=#{link[:video_id]}&t=#{link[:timecode]}", target: "_blank", class: "link-without-decoration" %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class='mt-2 display-7'>Примеров ответов еще нет!</p>
      <% end %>
  </div>
</div>
