<% provide :page_title, 'vacancies' %>

<%= link_to t('buttons.create_vacancy'), new_vacancy_path, class: 'btn btn-primary mt-4 mb-4' %>

<% if pagination?(@pagy) %>
  <h1 class="mt-3 fs-3"> <%= t('vacancy.index') %> </h1>

  <div class="custom-pagination">
    <%= pagination @pagy %>
  </div>
<% else %>
  <h1 class="mt-3 fs-3 mb-4"> <%= t('vacancy.index') %> </h1>
<% end %>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4 mb-5">
  <%= render @vacancies %>
</div>
