<%= form_with(url: session_path, data: { turbo: false }) do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :email, t('pages.email') %>
    </div>

    <div class="col-sm-10">
      <%= f.email_field :email, placeholder: t('pages.email'), 
                        value: params[:email], class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :password, t('pages.password') %>
    </div>

    <div class="col-sm-10">
      <%= f.password_field :password, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="offset-sm-2 col-sm-10">
      <div class="form-check">
        <%= f.check_box :remember_user, class: 'form-check-input', value: '1' %>
        <%= f.label :remember_user, t('pages.login_page.remember_me'), class: 'form-check-label' %>
      </div>
    </div>
  </div>

  <%= f.submit t('buttons.login'), class: 'btn btn-primary btn-lg mt-4' %>
<% end %>