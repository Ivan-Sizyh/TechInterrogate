<form action=<%= interviews_path %> method="get" class="mb-3">
  <label for="vacanciesFilter" class="mb-2"><%= t('vacancy.show.select_tag') %></label>

  <select class="form-select mb-2" 
          id="vacanciesFilter" 
          name="vacancy_id" 
          data-vacancies-target="vacancy"
          data-grades-target="vacancy"
          data-action="vacancies#selectVacancy">

    <option value="" <%= 'selected' if params[:vacancy_id].blank? %>>
      <%= t('selectors.all') %>
    </option>

    <% Vacancy.all.each do |vacancy| %>
      <option value="<%= vacancy.id %>" <%= 'selected' if params[:vacancy_id] == vacancy.id.to_s %>>
        <%= vacancy.title %>
      </option>
    <% end %>
  </select>
</form>
