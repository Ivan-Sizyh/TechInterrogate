<form id="gradeForm" action="<%= interviews_path %>" method="get" class="mb-3">
  <label for="gradiesFilter" class="mb-2"><%= t('vacancy.show.select_grade') %></label>

  <%= select_tag :grade_id, 
      options_for_select(Grade.all.map { |grade| [grade.title, grade.id.to_s] }, params[:grade_id]),
      include_blank: t('selectors.all'),
      class: "form-select mb-2", 
      id: "gradiesFilter", 
      name: "grade_id", 
      data: { vacancies_target: "grade", 
              grades_target: "grade", 
              action: "grades#selectGrade" } %>
</form>
