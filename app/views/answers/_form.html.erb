<%= render 'shared/errors', object: @answer %>

<%= form_with(model: [@question, @answer], data: { turbo: false }) do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :text, "#{t('answer.create.text')}:"%>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :text, placeholder: t('answer.create.text'), class: 'form-control' %>
    </div>
  </div>

  <%= f.submit t('buttons.create_answer'), class: 'btn btn-primary mb-4 mt-4' %>
<% end %>
